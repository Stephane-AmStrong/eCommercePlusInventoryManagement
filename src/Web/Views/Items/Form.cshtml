@model ItemDto

<form enctype="multipart/form-data" method="post" asp-controller="Items" asp-action="Save" asp-route-id="@Model.Id"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnBegin" data-ajax-complete="OnComplete"
      data-ajax-failure="OnFailure" data-ajax-success="OnSuccess">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" class="form-control" />
        <input asp-for="SellerId" type="hidden" class="form-control" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="ItemCategoryId" class="control-label"></label>
            <select asp-for="ItemCategoryId" class="form-control" asp-items="ViewBag.ItemCategoryId"> <option value=@null>--Select a Category--</option> </select>
            <span asp-validation-for="ItemCategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer justify-content-between">
        <input type="submit" value="Enregistrer" class="btn btn-primary btn-block" />
    </div>

</form>

<script src="~/js/modals.js"></script>