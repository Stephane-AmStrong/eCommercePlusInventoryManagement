@model OrderDto

<form enctype="multipart/form-data" method="post" asp-controller="Orders" asp-action="Delete" asp-route-id="@Model.Id"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnBegin" data-ajax-complete="OnComplete"
      data-ajax-failure="OnFailure" data-ajax-success="OnSuccess">
    <div class="modal-body">
        <p>Are You Sure You Want To Delete This?</p>

        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Total" class="control-label"></label>
            <textarea asp-for="Total" class="form-control" readonly rows="5"></textarea>
        </div>

    </div>

    <div class="modal-footer justify-content-between">
        <input type="submit" value="Supprimer" class="btn btn-danger btn-block" />
    </div>
</form>
